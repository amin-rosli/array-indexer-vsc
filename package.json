{
  "name": "array-indexer",
  "displayName": "array-indexer",
  "description": "",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/amin-rosli/array-indexer-vsc"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "array-indexer.addIncrement",
        "title": "Array Indexer: Add index to selection"
      },
      {
        "command": "array-indexer.removeIncrement",
        "title": "Array Indexer: Remove index from selection"
      },
      {
        "command": "array-indexer.setIndexCharacter",
        "title": "Array Indexer: Set Index Character"
      }
    ],
    "keybindings":[
      {
        "command": "array-indexer.addIncrement",
        "key": "ctrl+alt+9",
        "when": "editorHasSelection"
      },
      {
        "command": "array-indexer.removeIncrement",
        "key": "ctrl+alt+0",
        "when": "editorHasSelection"
      }
    ],
    "configuration":[
      {
        "title": "array-indexer",
        "type": "object",
        "properties": {
          "array-indexer.indexCharacter": {
            "type": "string",
            "default": "{",
            "description": "Character to index",
            "enum": ["{", "[", "\"", "'", "(", "Alphanumeric"],
            "enumDescriptions": [
              "Curly brackets: {",
              "Square brackets: [",
              "Double quotation: \"",
              "Single quotation: '",
              "Parentheses: (",
              "Letters and Numbers: A-Z & 0-9"
            ]
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
